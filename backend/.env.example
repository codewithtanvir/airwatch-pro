# Environment Variables for AirWatch Pro Backend
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-here-change-me-in-production
HOST=0.0.0.0
PORT=8000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# EPA AirNow API
EPA_API_EMAIL=your.email@example.com

# NASA API (optional)
NASA_API_KEY=your-nasa-api-key-here

# Logging
LOG_LEVEL=INFO

# Cache Configuration
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (comma-separated)
ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000