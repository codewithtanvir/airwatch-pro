# ===========================================
# AirWatch Pro - Environment Configuration Template
# Copy this to .env and fill in your actual API keys
# ===========================================

# ===========================================
# Backend API Configuration
# ===========================================
VITE_API_BASE_URL=http://127.0.0.1:8000
VITE_API_TIMEOUT=30000

# Backend Server Settings
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=60
ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ===========================================
# Database Configuration (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase MCP Configuration
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your-access-token-here

# ===========================================
# External API Keys - Get these from respective providers
# ===========================================
# EPA AirNow API (Backend)
EPA_API_EMAIL=your-email@example.com

# Frontend API Keys (VITE_ prefix for Vite access)
VITE_EPA_API_KEY=your-epa-api-key-here
VITE_OPENAQ_API_KEY=your-openaq-api-key-here  
VITE_OPENWEATHER_API_KEY=your-openweather-api-key-here
VITE_VISUAL_CROSSING_API_KEY=your-visual-crossing-api-key-here
VITE_WAQI_API_KEY=your-waqi-api-key-here

# NASA APIs
VITE_NASA_EARTHDATA_USERNAME=your-nasa-username
VITE_NASA_EARTHDATA_PASSWORD=your-nasa-password
NASA_API_KEY=your-nasa-api-key-here

# ===========================================
# Feature Flags
# ===========================================
VITE_ENABLE_SATELLITE_DATA=true
VITE_ENABLE_HISTORICAL_DATA=true
VITE_ENABLE_FORECASTS=true
VITE_ENABLE_ALERTS=true
VITE_DEBUG_MODE=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=true
VITE_ENABLE_MOCK_DATA=false

# ===========================================
# Map & Location Configuration
# ===========================================
VITE_DEFAULT_MAP_CENTER_LAT=40.7128
VITE_DEFAULT_MAP_CENTER_LNG=-74.0060
VITE_DEFAULT_MAP_ZOOM=10
VITE_DEFAULT_SEARCH_RADIUS_KM=50
VITE_MAX_MONITORING_STATIONS=100

# ===========================================
# Data Refresh & Caching
# ===========================================
VITE_CURRENT_DATA_REFRESH_INTERVAL=300
VITE_HISTORICAL_DATA_REFRESH_INTERVAL=3600
VITE_LOCATIONS_CACHE_DURATION=1800
VITE_CACHE_DURATION=900000
VITE_MAX_CACHE_SIZE=100

# ===========================================
# UI & Display Configuration
# ===========================================
VITE_MAX_HISTORICAL_HOURS=168
VITE_LOG_LEVEL=info
VITE_APP_NAME=AirWatch Pro
VITE_APP_VERSION=2.0.0

# ===========================================
# API Service URLs (for reference)
# ===========================================
VITE_EPA_BASE_URL=https://www.airnowapi.org
VITE_OPENAQ_BASE_URL=https://api.openaq.org/v2
VITE_OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
VITE_NASA_BASE_URL=https://cmr.earthdata.nasa.gov
VITE_WAQI_BASE_URL=https://api.waqi.info

# ===========================================
# Development Only - Remove in Production
# ===========================================
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true